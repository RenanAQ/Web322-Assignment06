{{#if data.post}}
  <h2>{{data.post.title}}</h2>
  <img src="{{data.post.featureImage}}" alt="{{data.post.title}}">
  {{{safeHTML data.post.body}}}
  <p>Category: {{data.post.category}}</p>
  <p>Price: ${{data.post.price}}</p>
  <p>Last Updated: {{data.post.postDate}}</p>
{{else}}
  <h2>{{data.message}}</h2>
  <p>Please try another post or category.</p>
{{/if}}

{{#if data.posts}}
  <ul>
    {{#each data.posts}}
      <li><a href="/shop/{{this.id}}?category={{../data.viewingCategory}}">{{this.title}}</a></li>
    {{/each}}
  </ul>
{{/if}}

{{#if data.categories}}
  <ul>
    {{#each data.categories}}
      <li><a href="/shop?category={{this.id}}">{{this.name}}</a></li>
    {{/each}}
  </ul>
{{/if}}